<% layout("layouts/boilerplate") %>

    <div class="container mt-4 col-8 offset-2">

        <!-- ðŸ”¹ Heading Section -->
        <div class="mb-3">
            <h2 class="fw-bold">
                <%= listing.title %>
            </h2>
        </div>

        <!-- ðŸ”¹ Image Section -->
        <div class="mb-4">
            <img src="<%= listing.image?.url || 'https://images.unsplash.com/photo-1761839257661-c2392c65ea72?q=80&w=1170&auto=format&fit=crop' %>"
                class="img-fluid rounded show-img" alt="listing image">

        </div>

        <hr class="my-4">

        <!-- ðŸ”¹ Details Section -->
        <div class="mb-4">
            <ul class="list-group">

                <li class="list-group-item">
                    <strong>Description:</strong>
                    <%= listing.description %>
                </li>

                <li class="list-group-item">
                    <strong>Price:</strong>
                    â‚¹ <%= typeof listing.price==="number" ? listing.price.toLocaleString("en-IN") : "N/A" %>
                </li>

                <li class="list-group-item">
                    <strong>Location:</strong>
                    <%= listing.location %>, <%= listing.country %>
                </li>

            </ul>
        </div>

        <!-- ðŸ”¹ Action Buttons -->
        <div class="d-flex gap-3 mb-4">
            <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary">
                Edit
            </a>

            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                <button class="btn btn-danger">
                    Delete
                </button>
            </form>
        </div>

    </div>